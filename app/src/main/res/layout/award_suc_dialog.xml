<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/award_bg_dialog"
        >

        <ImageView
            android:id="@+id/img_award_icon"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@drawable/icon_award_suc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_award1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#999999"
            android:layout_below="@+id/img_award_icon"
            android:textSize="17dp"
            android:text="恭喜你,中奖啦!!!"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_award2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#999999"
            android:layout_below="@+id/tv_award1"
            android:textSize="17dp"
            android:text="运气爆棚啊"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >


            <RelativeLayout
                android:id="@+id/RelativeLayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                >
                
                <Button 
                    android:id="@+id/btn_no"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:text="取消"
                    android:background="@drawable/award_no_selector"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    />
               

                <Button 
                    android:id="@+id/btn_yes"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:text="领取"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/award_yes_selector"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    />
                
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>