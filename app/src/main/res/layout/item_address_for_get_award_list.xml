<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_get_award"
        android:layout_margin="15dp"
        android:src="@drawable/iv_duihao_grey"
        android:layout_width="22dp"
        android:layout_height="22dp" />

    <TextView
        android:id="@+id/tv_address_manager_name"
        android:layout_toRightOf="@+id/iv_get_award"
        android:layout_alignBaseline="@+id/iv_get_award"
        android:text="王大锤"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_address_manager_phone"
        android:text="15602329585"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/tv_address_manager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_address_manager_address"
        android:text="华景软件园华景软件园华景软华景软件园软华景软件园华软华景软件园华华景软件园"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tv_address_manager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_below="@+id/tv_address_manager_address"
        android:background="@drawable/address_divider_icon"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</RelativeLayout>