<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_area_chooser">

            <TextView
                android:id="@+id/tv_community_gz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/community_gz"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/col_white"/>

            <TextView
                android:id="@+id/tv_community_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/community_st"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/col_white"/>

        </LinearLayout>

    </LinearLayout>