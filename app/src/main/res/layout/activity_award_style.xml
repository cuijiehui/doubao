<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.AwardStyleActivity">
    <RelativeLayout
        android:id="@+id/relative_duobao_record_title"
        android:background="@drawable/main_page_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height">
        <TextView
            android:id="@+id/tv_duobao_record_title"
            android:text="@string/award_style_title"
            style="@style/title_style"
            android:textColor="@color/app_base_text_color_deep"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_award_style_back"
            android:layout_width="48dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:src="@drawable/bt_back"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_award_style_action_bar"
        android:layout_width="match_parent"
        android:layout_below="@+id/relative_duobao_record_title"
        android:orientation="horizontal"
        android:layout_height="48dp">
        <LinearLayout
            android:id="@+id/ll_award_style_general"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_award_style_title1"
                android:layout_width="match_parent"
                android:text="普通抽奖"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <LinearLayout
                android:id="@+id/ll_award_style_bg1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/activity_divider_height_2"
                android:layout_gravity="bottom"
                android:background="@color/color_app_base_color"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_award_style_pool"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_award_style_title2"
                android:layout_width="match_parent"
                android:text="抽奖池"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <LinearLayout
                android:id="@+id/ll_award_style_bg2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_divider_height_2"
                android:background="@color/color_divider_background"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_duobao_record_container"
        android:layout_below="@+id/ll_award_style_action_bar"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"/>
</RelativeLayout>
