<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_below="@+id/tv_recharge_title"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_discover_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/loading_icon"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_discover_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/award_pool_loading_text"
                    />
                <TextView
                    android:id="@+id/tv_discover_remark"
                    android:layout_width="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="@string/award_pool_loading_text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_discover_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:text="0%"
                    />
                <TextView
                    android:id="@+id/tv_discover_download"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="下载"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:textColor="@color/color_font"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/selector_bt_state_change"
                    />
                <TextView
                    android:id="@+id/tv_discover_interaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_red"
                    android:text="@string/award_pool_loading_text"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/color_divider_background"
            android:layout_height="1dp"/>
    </LinearLayout>
</RelativeLayout>