<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="170dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:background="@color/color_divider_background"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dujia_asc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_item_click_state_change_grey"
            android:text="升序"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_divider_height_1"
            android:background="@color/color_gray"
            />
        <TextView
            android:id="@+id/tv_dujia_desc"
            android:layout_width="match_parent"
            android:background="@drawable/selector_item_click_state_change_grey"
            android:layout_height="40dp"
            android:text="降序"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_divider_height_1"
            android:background="@color/color_divider_background"
            />
    </LinearLayout>
</RelativeLayout>