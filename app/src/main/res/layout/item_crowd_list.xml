<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_font">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10">
        <!--第一个item-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_main_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="5dp">
                <!--android:background="@drawable/selector_layout_state_change"-->
                <!--活动图片-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <ImageView
                        android:id="@+id/iv_main_activity_logo"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/loading_icon" />

                    <ImageView
                        android:id="@+id/iv_hot_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hot_icon"
                        android:visibility="gone" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textSize="14dp"
                        android:layout_alignBottom="@+id/tv_discount"
                        android:textColor="#4a4a4a"
                        />

                    <TextView
                        android:id="@+id/tv_cost_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="233"
                        android:layout_toRightOf="@+id/tv"
                        android:layout_alignBottom="@+id/tv_discount"
                        android:textColor="#4a4a4a"
                        />


                    <TextView
                        android:id="@+id/tv_discount_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="233"
                        android:layout_toRightOf="@+id/tv_cost_price"
                        android:layout_marginLeft="10dp"
                        android:layout_alignBottom="@+id/tv_discount"
                        android:textColor="#cccccc"
                        />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="3.5折"
                        android:textColor="@color/color_text_base"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/tv_discount_bg_shape"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />

                </RelativeLayout>

                <!--活动信息-->
                <TextView
                    android:id="@+id/tv_main_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_marginTop="@dimen/margin_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/award_pool_loading_text"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="揭晓进度"
                        android:textColor="#666666"
                        android:textSize="12dp" />

                    <com.xinspace.csevent.sweepstake.view.MyProgress
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@+id/textView1"
                        android:background="@null"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/progressbar"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <!--分割线-->
        <TextView
            android:layout_width="@dimen/activity_divider_height_1"
            android:layout_height="match_parent"
            android:background="@color/color_gray" />

        <!--第二个item-->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_main_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_10"
                android:visibility="gone">
                <!--android:background="@drawable/selector_layout_state_change"-->
                <!--活动图片-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <ImageView
                        android:id="@+id/iv_main_activity_logo1"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/loading_icon" />

                    <ImageView
                        android:id="@+id/iv_hot_icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hot_icon"
                        android:visibility="gone" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textSize="14dp"
                        android:layout_alignBottom="@+id/tv_discount2"
                        android:textColor="#4a4a4a"
                        />

                    <TextView
                        android:id="@+id/tv_cost_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="233"
                        android:layout_toRightOf="@+id/tv2"
                        android:layout_alignBottom="@+id/tv_discount2"
                        android:textColor="#4a4a4a"
                        />


                    <TextView
                        android:id="@+id/tv_discount_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="233"
                        android:layout_toRightOf="@+id/tv_cost_price2"
                        android:layout_marginLeft="10dp"
                        android:layout_alignBottom="@+id/tv_discount2"
                        android:textColor="#cccccc"
                        />


                    <TextView
                        android:id="@+id/tv_discount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="3.5折"
                        android:textColor="@color/color_text_base"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/tv_discount_bg_shape"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        />

                </RelativeLayout>

                <!--活动信息-->
                <TextView
                    android:id="@+id/tv_main_activity_name1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_marginTop="@dimen/margin_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/award_pool_loading_text"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="揭晓进度"
                        android:textColor="#666666"
                        android:textSize="12dp" />

                    <com.xinspace.csevent.sweepstake.view.MyProgress
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@+id/textView2"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/progressbar"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>