<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_divider_background"
    tools:context=".ui.activity.SupplyInfoActivity">
    <RelativeLayout
        android:id="@+id/rl_my_member_center_title"
        android:background="@drawable/main_page_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height">
        <TextView
            android:id="@+id/tv_member_center_title"
            android:text="会员中心"
            style="@style/title_style"
            android:textColor="@color/app_base_text_color_deep"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_member_center_back"
            android:layout_width="48dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_my_member_center_back"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:src="@drawable/bt_back"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_member_center_feedback"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/selector_bt_state_change_grey"
        android:layout_below="@+id/rl_my_member_center_title"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:text="意见反馈"
            style="@style/member_center_txt_style"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:src="@drawable/go_into_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_member_center_qa"
        android:layout_marginTop="2dp"
        android:background="@drawable/selector_bt_state_change_grey"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_member_center_feedback"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:text="Q&amp;A"
            style="@style/member_center_txt_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:src="@drawable/go_into_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_member_center_rule"
        android:layout_marginTop="2dp"
        android:background="@drawable/selector_bt_state_change_grey"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_member_center_qa"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:text="抽奖规则"
            style="@style/member_center_txt_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:src="@drawable/go_into_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_member_center_email"
        android:layout_marginTop="2dp"
        android:background="@drawable/selector_bt_state_change_grey"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_member_center_rule"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:text="消息中心"
            style="@style/member_center_txt_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:src="@drawable/go_into_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</RelativeLayout>
