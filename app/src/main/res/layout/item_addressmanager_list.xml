<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_address_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:text="王大锤" />

        <TextView
            android:id="@+id/tv_address_manager_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:text="15602329585" />

        <TextView
            android:id="@+id/tv_address_manager_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_manager_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:text="华景软件园华景软件园华景软华景软件园华景软件园" />


        <LinearLayout
            android:id="@+id/linear_address_manager_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_address_manager_address"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_dotted_line_shape"
            android:layerType="software"
            android:orientation="horizontal" />

        <RelativeLayout
            android:id="@+id/relative_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linear_address_manager_line"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp">


            <ImageView
                android:id = "@+id/iv_default_address"
                android:layout_width = "30dp"
                android:layout_height = "30dp"
                android:button="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_cb_address_no"
                />

            <TextView
                android:id="@+id/tv_default_address"
                style="@style/address_edit_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_default_address"
                android:background="@drawable/selector_bt_state_change_grey"
                android:gravity="center_vertical"
                android:text="设为默认地址" />


            <RelativeLayout
                android:id="@+id/rl_address_manager_item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rl_address_manager_item_edit"
                android:background="@drawable/tv_address_bg_shape"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                >

                <TextView
                    android:id="@+id/tv_address_manager_delete_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="删除"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_address_manager_item_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/tv_address_bg_shape"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/tv_address_manager_edit_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="编辑"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>