<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/color_font"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="110dp">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:id="@+id/iv_main_act_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/loading_icon"
                android:scaleType="fitCenter"
                />

            <ImageView
                android:id="@+id/iv_main_hot_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hot_icon"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="商品名字"
                android:layout_marginRight="@dimen/margin_10"
                android:ellipsize="end"
                android:textSize="18dp"
                android:textColor="#4a4a4a"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tv_goods_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="加载中..."
                android:layout_marginRight="@dimen/margin_10"
                android:ellipsize="end"
                android:textSize="16dp"
                android:textColor="#ea8010"
                android:layout_marginBottom="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已购买人数："
                    android:layout_marginRight="@dimen/margin_10"
                    android:ellipsize="end"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tv_buy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="36"
                    android:layout_marginRight="@dimen/margin_10"
                    android:ellipsize="end"
                    android:textSize="16dp"
                    android:textColor="@color/color_text_base"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="详情》"
                android:layout_marginRight="@dimen/margin_10"
                android:textSize="16dp"
                android:textColor="#4a4a4a"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:orientation="horizontal"
        android:layout_height="@dimen/activity_divider_height_1"/>
</LinearLayout>