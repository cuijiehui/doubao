<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_award_detial_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/color_app_base_color_grey">

        <TextView
            android:id="@+id/tv_recharge_title"
            style="@style/title_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="中奖记录"
            android:textColor="@color/color_font" />

        <ImageView
            android:id="@+id/iv_act_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/share_icon"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_address_edit_back"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="#00ffffff"
                android:src="@drawable/bt_back" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_font"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rel_all_win_record"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_all_win_record"
                    android:layout_width="29dp"
                    android:layout_height="23dp"
                    android:src="@drawable/icon_all"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tv_all_win_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="全部"
                    android:layout_below="@+id/iv_all_win_record"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_win_no_send"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_win_no_send"
                    android:layout_width="29dp"
                    android:layout_height="23dp"
                    android:src="@drawable/icon_nosend"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tv_win_no_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="待发货"
                    android:layout_below="@+id/iv_win_no_send"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_win_no_receiving"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_win_no_receiving"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_no_receving"
                    />

                <TextView
                    android:id="@+id/tv_win_no_receiving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="待收货"
                    android:layout_below="@+id/iv_win_no_receiving"
                    />
            </RelativeLayout>

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:tabIndicatorColor="#ef5948"></android.support.design.widget.TabLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/color_font"
        android:orientation="vertical"></LinearLayout>


</LinearLayout>