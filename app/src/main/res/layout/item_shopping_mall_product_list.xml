<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        />
    <!--详细信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_height="wrap_content">
        <!--标题-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/award_pool_loading_text"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_margin_left_20"
            android:layout_height="match_parent">
            <!--好评与销量-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好评率:"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:textColor="@color/color_red"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月销量:"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:textColor="@color/color_red"
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- 数量按钮 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="一"
                    android:background="@drawable/selector_tv_circle_reduce_state_change"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/tv_reduce_pressed_shape"
                    android:textColor="@color/color_font"
                    android:layout_marginLeft="@dimen/margin_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="00"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:background="@drawable/tv_reduce_pressed_shape"
                    android:textColor="@color/color_font"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="@dimen/margin_5"
                    />
            </LinearLayout>

        </LinearLayout>





    </LinearLayout>
</LinearLayout>