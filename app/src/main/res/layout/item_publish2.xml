<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_font">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--第一个item-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_main_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_layout_state_change"
                android:orientation="vertical">
                <!--android:background="@drawable/selector_layout_state_change"-->
                <!--活动图片-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <ImageView
                        android:id="@+id/iv_main_activity_logo"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/loading_icon" />

                </FrameLayout>
                <!--活动信息-->
                <TextView
                    android:id="@+id/tv_main_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_marginTop="@dimen/margin_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/award_pool_loading_text"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_noactivity_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" />


                    <RelativeLayout
                        android:id="@+id/rel_content_1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_count_down"
                            android:text="揭晓进度"
                            android:textColor="#666666"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_publish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imageView"
                            android:text="即将揭晓" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_count_down_time_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_text_base"
                        android:textSize="22dp" />


                    <RelativeLayout
                        android:id="@+id/rel_content_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="获奖用户：" />

                        <TextView
                            android:id="@+id/tv_win_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_1"
                            android:text="获奖用户"
                            android:textColor="#56abe4" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rel_content_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参与次数：" />

                        <TextView
                            android:id="@+id/tv_win_match"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_2"
                            android:text="获奖用户" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rel_content_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="幸运号码：" />

                        <TextView
                            android:id="@+id/tv_luck_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_4"
                            android:text="获奖用户"
                            android:textColor="@color/color_text_base" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rel_content_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="揭晓时间：" />

                        <TextView
                            android:id="@+id/tv_win_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_5"
                            android:singleLine="true"
                            android:text="获奖用户" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>