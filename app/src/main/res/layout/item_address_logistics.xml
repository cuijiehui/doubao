<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_font"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:id="@+id/lin_address_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="地址信息"
            android:layout_margin="10dp"
            android:textColor="#333333"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/tv_consignee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="收货人名字"
            android:layout_margin="10dp"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/tv_consignee_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="收货人名字"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:textColor="#333333"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_logistics_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="物流信息"
            android:layout_margin="10dp"
            android:textColor="#333333"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#333333"
            />


        <TextView
            android:id="@+id/tv_award_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="奖品名字"
            android:textSize="16dp"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/tv_logistics_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="物流名字"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            />

        <TextView
            android:id="@+id/tv_logistics_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="物流单号"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="25dp"
            android:textColor="#333333"
            />

    </LinearLayout>

</LinearLayout>