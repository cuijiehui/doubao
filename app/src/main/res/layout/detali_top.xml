<?xml version="1.0" encoding="utf-8"?>
<com.xinspace.csevent.sweepstake.view.ScrollViewForTop xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_act_detail_viewPager"
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="@color/color_divider_background"
                android:layout_height="wrap_content"/>
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="30dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/tv_detail_act_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="dfsfsfsfsfsf"
                android:textColor="@color/color_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_act_indouct"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="商品简介"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_text_base"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动时间:"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_act_during_time"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/topview_top_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_act_issue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="活动期号" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/rel_person"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="剩余奖品：" />

                <TextView
                    android:id="@+id/tv_remaining_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView"
                    android:gravity="center_vertical"
                    android:text="dddd"
                    android:textColor="@color/color_red" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="已有" />

                <TextView
                    android:id="@+id/tv_person"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/textView2"
                    android:gravity="center_vertical"
                    android:text=" dd "
                    android:textColor="@color/color_red" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_person"
                    android:gravity="center_vertical"
                    android:text="人中奖" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/topview_bottom_shape"
            >

            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="68dp"-->
                <!--android:layout_marginLeft="2dp"-->
                <!--android:layout_marginRight="2dp"-->
                <!--android:background="@color/color_font"></RelativeLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="#eeeeee" />

            <ImageView
                android:id="@+id/img_remaining_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_remain_time" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/tv_remaining_day"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/color_red"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_remaining_hour1"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_remaining_day"
                    android:background="@drawable/topview_time_shape"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/color_font"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_remaining_hour2"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv_remaining_hour1"
                    android:background="@drawable/topview_time_shape"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/color_font"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_remaining_min1"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_remaining_hour2"
                    android:background="@drawable/topview_time_shape"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/color_font"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_remaining_min2"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv_remaining_min1"
                    android:background="@drawable/topview_time_shape"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/color_font"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_remaining_sec1"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_remaining_min2"
                    android:background="@drawable/topview_time_shape"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/color_font"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_remaining_sec2"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv_remaining_sec1"
                    android:background="@drawable/topview_time_shape"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/color_font"
                    android:textSize="20dp" />





            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/color_font"
            >

            <RelativeLayout
                android:id="@+id/rel_win_person"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_bt_state_change_grey">

                <TextView
                    android:id="@+id/tv_win_person"
                    style="@style/mine_setting_text_style"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/img_snatch_log"
                    android:text="中奖名单" />

                <ImageView
                    style="@style/mine_go_into_style"
                    android:src="@drawable/go_into_icon" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/rel_win_share"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_bt_state_change_grey">

                <TextView
                    android:id="@+id/tv_win_share"
                    style="@style/mine_setting_text_style"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/img_snatch_log"
                    android:text="晒单分享" />

                <ImageView
                    style="@style/mine_go_into_style"
                    android:src="@drawable/go_into_icon" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_push_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="上拉查看图文详情"
                android:textColor="#cccccc"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</com.xinspace.csevent.sweepstake.view.ScrollViewForTop>