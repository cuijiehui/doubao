<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/lin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/color_font"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_awards_record_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="订单未发货"
            android:textColor="@color/color_app_base_color_grey"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#eeeeee" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linshi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_top"
        android:background="@color/color_font"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_awards_record_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/loading_icon" />

        <LinearLayout
            android:id="@+id/ll_awards_record_txt"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_awards_record_image"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tv_awards_record_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/award_pool_loading_text" />

            <TextView
                android:id="@+id/tv_awards_noactivity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="期号" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/awards_record_number_and_time_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价值:" />

                <TextView
                    android:id="@+id/tv_awards_record_price"
                    style="@style/awards_record_number_and_time_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/award_pool_loading_text" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_txt1"
                    style="@style/awards_record_attend_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="参与次数:" />

                <TextView
                    android:id="@+id/tv_awards_record_attend_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_txt1"
                    android:text="0"
                    android:textSize="13sp" />

                <TextView
                    style="@style/awards_record_attend_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/tv_awards_record_attend_num"
                    android:text="次" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/awards_record_number_and_time_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="揭晓时间:" />

                <TextView
                    android:id="@+id/tv_awards_record_time"
                    style="@style/awards_record_number_and_time_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/award_pool_loading_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linshi1"
        android:background="@color/color_font"
        >

        <TextView
            android:id="@+id/tv_share_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即晒单"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:background="@drawable/tv_record_bg_shape"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#eeeeee"
            android:layout_below="@id/tv_share_order"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>


</RelativeLayout>