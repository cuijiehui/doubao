<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    >

    <!-- 标题栏-->
    <RelativeLayout
        android:id="@+id/relative_payment_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/app_bottom_color">

        <TextView
            android:id="@+id/tv_payment_title"
            style="@style/title_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="社区缴费"
            android:textColor="@color/color_register_edit_background" />

        <LinearLayout
            android:id="@+id/ll_payment_back"
            android:layout_width="48dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_payment_back"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:src="@drawable/bt_back"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_payment_record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="缴费记录"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_register_edit_background"
            android:layout_marginRight="10dp"
            />


    </RelativeLayout>


    <ExpandableListView
        android:id="@+id/expandable_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        />


</LinearLayout>