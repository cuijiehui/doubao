<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:id="@+id/ll_my_coin_showInfo"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_my_coin_sum"
                android:layout_marginLeft="150dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/color_red"
                />
             <TextView
                 android:text="积分"
                 style="@style/my_coin_black_txt_style"
                 android:layout_alignBaseline="@+id/tv_my_coin_sum"
                 android:layout_toRightOf="@+id/tv_my_coin_sum"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_my_coin_point"
                android:text="=0"
                android:layout_marginLeft="140dp"
                android:textColor="@color/color_bt_unpressed_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_coin_txt"
                android:layout_toRightOf="@+id/tv_my_coin_point"
                style="@style/my_coin_black_txt_style"
                android:text="个元宝"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_coin_rate"
                android:layout_toRightOf="@+id/tv_my_coin_txt"
                style="@style/my_coin_black_txt_style"
                android:text="(获取中..)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_my_coin_exchange"
            android:layout_marginLeft="140dp"
            android:layout_weight="1"
            android:text="兑换元宝"
            android:textColor="@color/white"
            android:background="@drawable/selector_bt_state_change_red"
            android:layout_width="120dp"
            android:layout_height="0dp" />


    </LinearLayout>

</RelativeLayout>
