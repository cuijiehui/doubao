<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xinspace.csevent.ui.activity.FullBrandPictureActivity">
    <RelativeLayout
        android:id="@+id/rl_brand_title"
        android:background="@drawable/main_page_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height">
        <TextView
            android:id="@+id/tv_fullpage_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_base_text_color_deep"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            />
        <LinearLayout
            android:id="@+id/ll_brand_back"
            android:layout_width="48dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_brand_back"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:src="@drawable/bt_back"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_brand_title"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_brand_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/ci_brand_indicator"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="100dp"/>
    </FrameLayout>
</RelativeLayout>
