<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <!--活动图片以及热门标记-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/iv_main_act_icon"
                android:src="@drawable/loading_icon"
                />
            <ImageView
                android:id="@+id/iv_main_hot_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hot_icon"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_act_name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:maxLines="2"
                android:layout_marginTop="@dimen/margin_10"
                android:text="加载中..."
                android:layout_marginRight="@dimen/margin_10"
                android:ellipsize="end"
                />
            <!-- 剩余奖品和活动状态-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="12sp"
                            android:ellipsize="end"
                            android:text="剩余奖品:"
                            />
                        <TextView
                            android:id="@+id/main_award_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="12sp"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:textColor="@color/color_red"
                            android:text="--"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="12sp"
                            android:ellipsize="end"
                            android:text="中奖人数:"
                            />
                        <TextView
                            android:id="@+id/main_award_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_red"
                            android:textSize="12sp"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:text="--"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="12sp"
                            android:text="剩余时间:"
                            />
                        <TextView
                            android:id="@+id/main_time_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/color_red"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:text="--"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_state_starting"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="进行中"
                        android:background="@drawable/activity_state_starting_shape"
                        android:textColor="@color/color_font"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/tv_state_not_start"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="未开始"
                        android:background="@drawable/activity_state_not_starting_shape"
                        android:textColor="@color/color_font"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="已结束"
                        android:id="@+id/tv_state_end"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/activity_state_not_starting_shape"
                        android:textColor="@color/color_font"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="gone"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奖品已发完"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_state_no_award"
                        android:background="@drawable/activity_state_not_starting_shape"
                        android:textColor="@color/color_font"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:visibility="gone"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_gravity="bottom"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_divider_background"
        android:orientation="horizontal"
        android:layout_height="@dimen/activity_divider_height_1"/>
</LinearLayout>