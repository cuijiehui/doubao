<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:background="@drawable/tv_bg_shape"
        android:layout_height="200dp" />
    <ImageView
        android:id="@+id/award_opening_gift_box"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/award_opening_gift_box"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_award_opening"
        android:textColor="@color/color_font_hese"
        android:layout_below="@+id/dianlog_opening_award_progressbar"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_margin_left_20"
        android:id="@+id/textView" />
    <ProgressBar
        android:id="@+id/dianlog_opening_award_progressbar"
        android:layout_width="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="30dp"
        android:progress="30"
        android:layout_marginTop="@dimen/activity_margin_left_20"
        android:layout_below="@+id/award_opening_gift_box"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
