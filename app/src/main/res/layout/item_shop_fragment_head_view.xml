<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--广告-->
    <ImageView
        android:id="@+id/iv_shop_adv"
        android:layout_width="match_parent"
        android:src="@drawable/shop_bg"
        android:scaleType="fitXY"
        android:layout_height="@dimen/activity_view_pager_height" />
    <!--商家图标-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/main_page_icon_bg"
        android:layout_height="wrap_content">
        <GridView
            android:id="@+id/gv_shop_gridview"
            android:layout_width="match_parent"
            android:numColumns="5"
            android:gravity="center"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/margin_15"
            android:verticalSpacing="@dimen/margin_15"
            android:horizontalSpacing="@dimen/margin_10"
            android:layout_marginLeft="@dimen/activity_margin_left_20"
            android:layout_marginRight="@dimen/activity_margin_left_20"
            android:layout_height="165dp"/>
    </LinearLayout>

    <!--最新活动-->
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_divider_background"
        android:layout_height="@dimen/activity_divider_height_1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_left_20"
        android:text="@string/main_tv_new_activity"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        />
</LinearLayout>