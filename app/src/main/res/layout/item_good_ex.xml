<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@color/color_font"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:id="@+id/iv_main_act_icon"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/loading_icon"
                android:scaleType="fitCenter"
                />

            <ImageView
                android:id="@+id/iv_main_hot_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hot_icon"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:background="#ffbc40"
                android:gravity="center"
                android:text="积分兑换"
                android:textColor="#ffffff"
                />


            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="商品名字"
                android:layout_marginRight="@dimen/margin_10"
                android:ellipsize="end"
                android:textSize="16dp"
                android:textColor="#4a4a4a"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:id="@+id/lin_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignBottom="@+id/tv_exchange"
                    >

                    <TextView
                        android:id="@+id/tv_goods_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:ellipsize="end"
                        android:textSize="16dp"
                        android:textColor="@color/color_text_base"
                        android:layout_marginBottom="5dp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:ellipsize="end"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/lin_1"
                    android:layout_alignBottom="@+id/tv_exchange"
                    android:visibility="invisible"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        />

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:ellipsize="end"
                        android:textSize="16dp"
                        android:textColor="@color/color_text_base"
                        android:layout_marginBottom="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:ellipsize="end"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_exchange"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="兑换"
                    android:textColor="#ffffff"
                    android:background="@drawable/selector_bt_state_change"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:orientation="horizontal"
        android:layout_height="5dp"/>
</LinearLayout>