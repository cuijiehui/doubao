<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "135dp"
    android:background="@color/color_font"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认收货地址"
        android:textColor="@color/color_app_base_color_grey"
        android:textSize="16dp"
        />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1881019989"
            android:textSize="16dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:text="fsfsdfdsfsdfdsfsfsfsfsfsfsf"
        android:layout_marginTop="10dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="使用其他"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_yes_yes"
            android:layout_marginRight="10dp"
            android:background="@drawable/award_no_selector"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/tv_yes_yes"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="确定"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/award_yes_selector"
            android:textColor="#ffffff"
            android:clickable="true"
            />
    </RelativeLayout>

</RelativeLayout>