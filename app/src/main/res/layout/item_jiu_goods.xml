<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="fsfsfsfdsfs"
            android:textColor="#333333"
            android:maxLines="2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_red"
                android:textSize="18dp"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_goods_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12dp"
                    android:layout_alignBaseline="@+id/tv_go_buy"
                    />

                <TextView
                    android:id="@+id/tv_goods_buy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12dp"
                    android:layout_toRightOf="@+id/tv_goods_price2"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBaseline="@+id/tv_go_buy"
                    />

                <TextView
                    android:id="@+id/tv_go_buy"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bt_pressed_shape"
                    android:text= "购买"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eeeeee"
        android:layout_below="@+id/lin_1"
        />

</RelativeLayout>