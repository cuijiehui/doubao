<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linshi1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_awards_record_image"
                android:src="@drawable/ic_launcher"
                android:layout_margin="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <LinearLayout
                android:id="@+id/ll_awards_record_txt"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_awards_record_image"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingRight="5dp"
                android:layout_height="130dp">
                <TextView
                    android:id="@+id/tv_duobao_record_name"
                    android:text="Apple iPhone 6s (A1700) 64G 金色  移动联通电信4G手机"
                    android:layout_weight="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:text="参与期号:"
                                style="@style/awards_record_number_and_time_txt_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_duobao_record_number"
                                android:layout_marginLeft="5dp"
                                style="@style/awards_record_number_and_time_txt_style"
                                android:text="12306"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <ImageView
                            android:src="@drawable/jindutiao"
                            android:layout_weight="1"
                            android:layout_width="130dp"
                            android:layout_height="0dp" />
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:text="总需:"
                                style="@style/awards_record_number_and_time_txt_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_duobao_record_time"
                                style="@style/awards_record_number_and_time_txt_style"
                                android:layout_marginLeft="3dp"
                                android:text="5000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="剩余:"
                                android:layout_marginLeft="10dp"
                                style="@style/awards_record_number_and_time_txt_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_duobao_record_time2"
                                style="@style/awards_record_number_and_time_txt_style"
                                android:layout_marginLeft="3dp"
                                android:text="5000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:text="本期参与:"
                        style="@style/awards_record_attend_txt_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_awards_record_attend_num"
                        android:layout_marginLeft="5dp"
                        android:text="--"
                        android:textSize="16sp"
                        android:textColor="@color/color_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="人次"
                        style="@style/awards_record_attend_txt_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/color_divider_background"
            android:layout_height="@dimen/activity_divider_height_1"/>
    </LinearLayout>
</RelativeLayout>