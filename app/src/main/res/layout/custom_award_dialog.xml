<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/tv_bg_shape"
        android:layout_height="280dp" />
    <ImageView
        android:id="@+id/gift_box"
        android:layout_width="120dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/gift_box_icon"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp" />
    <ImageView
        android:id="@+id/iv_dialog_pity"
        android:layout_width="120dp"
        android:src="@drawable/gong_xi_ni"
        android:layout_below="@+id/gift_box"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/huojiang_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/color_font_hese"
        android:text="获得了'尼康相机'奖品"
        android:layout_below="@+id/iv_dialog_pity"
        />
    <Button
        android:id="@+id/bt_dialog_get_award"
        android:layout_below="@+id/huojiang_text"
        android:layout_width="150dp"
        android:padding="10dp"
        android:background="@drawable/selector_bt_state_change"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/dialog_go_to_get_award"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
