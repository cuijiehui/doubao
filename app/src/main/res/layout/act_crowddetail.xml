<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--标题栏-->
        <RelativeLayout
            android:id="@+id/relative_award_detial_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_title_height"
            android:background="@color/app_bottom_color">

            <TextView
                android:id="@+id/tv_recharge_title"
                style="@style/title_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="详情"
                android:textColor="@color/color_font" />

            <ImageView
                android:id="@+id/iv_act_detail_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:src="@drawable/share_icon"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_award_detail_back"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_address_edit_back"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="#00ffffff"
                    android:src="@drawable/bt_back" />
            </LinearLayout>
        </RelativeLayout>


        <com.xinspace.csevent.sweepstake.view.VerticalViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/verticalVpCrowd"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_font"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新一期正在火热进行"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_go_next_sweepstake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tv_record_bg_shape"
            android:padding="8dp"
            android:text="前往抽奖"
            android:textColor="#ffffff" />


    </RelativeLayout>

</RelativeLayout>