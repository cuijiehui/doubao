<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    android:background="@color/color_gray"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/app_com_unit_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:src="@drawable/community_style"/>

            <ImageView
                android:id="@+id/img_unit_add_status"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/unit_add_pass"/>
        </FrameLayout>

        <TextView
            android:id="@+id/com_app_community_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="社区名称：晟中社区体验区域"
            android:textSize="16sp"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
             />

        <TextView
            android:id="@+id/com_app_unit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="楼栋名称：寰城海航广场展示厅"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/com_app_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:text="门号名称：总统套房"
            android:layout_marginBottom="5dp"
            android:textSize="16sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>