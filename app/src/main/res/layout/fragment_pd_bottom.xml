<?xml version="1.0" encoding="utf-8"?>
<com.xinspace.csevent.sweepstake.view.ScrollViewForBottom xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新一期正在火热进行"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/tv_go_crowd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_record_bg_shape"
                android:text="前往抽奖"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_font"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                />


        </RelativeLayout>



        <LinearLayout
            android:id="@+id/lin_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="其他说明"
            android:gravity="center"
            />

    </LinearLayout>

</com.xinspace.csevent.sweepstake.view.ScrollViewForBottom>