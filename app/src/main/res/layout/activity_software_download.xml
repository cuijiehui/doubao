<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.SoftwareDownloadActivity">
    <RelativeLayout
        android:id="@+id/relative_software_download_title"
        android:background="@color/color_app_base_color_grey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height">
        <TextView
            android:id="@+id/tv_recharge_title"
            android:text="软件下载"
            style="@style/title_style"
            android:textColor="@color/app_base_text_color_deep"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_software_download_back"
            android:layout_width="48dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_address_edit_back"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:src="@drawable/bt_back"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 应用信息item部分 -->
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/relative_software_download_title"
        android:layout_above="@+id/fl_software_framelayout"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_software_info"
                android:layout_width="match_parent"
                android:layout_below="@id/relative_software_download_title"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_software_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_software_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:text="加载中..."
                        />
                    <TextView
                        android:id="@+id/tv_discover_remark"
                        android:layout_width="wrap_content"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:textSize="10sp"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="--"
                        />
                </LinearLayout>
            </LinearLayout>

            <!--滚动图-->
            <HorizontalScrollView
                android:id="@+id/sv_software_scrollview"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:scrollbars="none"
                android:layout_below="@+id/ll_software_info"
                android:layout_height="250dp">
                <LinearLayout
                    android:id="@+id/ll_software_photo_container"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                </LinearLayout>
            </HorizontalScrollView>
            <!--分割线-->
            <TextView
                android:id="@+id/tv_divider"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_below="@+id/sv_software_scrollview"
                android:background="@color/color_divider_background"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/activity_divider_height_1" />

            <!--软件的大小,及其他信息-->
            <LinearLayout
                android:id="@+id/ll_software_detail_info"
                android:layout_below="@+id/tv_divider"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_software_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="大小:"
                        android:gravity="left"
                        android:paddingLeft="30dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/tv_software_version"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="版本:"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_software_date"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="30dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="日期:"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_software_download_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下载进度:"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/tv_software_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/fl_software_framelayout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_margin_left_20"
        android:layout_marginRight="@dimen/activity_margin_left_20"
        android:layout_marginBottom="@dimen/activity_margin_left_20"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_software_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="安装"
            android:textColor="@color/color_font"
            android:textSize="18sp"
            android:background="@drawable/selector_bt_state_change"
            />
        <TextView
            android:id="@+id/tv_software_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginRight="@dimen/activity_margin_left_20"
            android:layout_gravity="center_vertical|right"
            android:textColor="@color/color_font_yellow"
            />
    </FrameLayout>
</RelativeLayout>
