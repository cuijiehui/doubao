<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_goods_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_address"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        >

        <LinearLayout
            android:id="@+id/linshi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                 />

            <RelativeLayout
                android:id="@+id/ll_awards_record_txt"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/tv_order_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="@string/award_pool_loading_text"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_toLeftOf="@+id/tv_order_goods_prize"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/tv_order_goods_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="¥780"
                    android:textColor="@color/color_text_base"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_goods_name"
                    >
                    <TextView
                        android:id="@+id/text_order_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="颜色"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/text_order_standard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="规格"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"
                        />

                    <TextView
                        android:id="@+id/tv_order_goods_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:text=""
                        />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>