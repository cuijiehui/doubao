<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="185dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/spell_group_recommend_img"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:src="@drawable/loading_icon"/>

    <TextView
        android:id="@+id/spell_group_recommend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:maxLines="2"
        android:text="我是一条测试数据" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/recommend_price"
            android:text="￥88"
            android:textSize="16sp"
            android:textColor="#ff2200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recommend_all_price"
            android:layout_toRightOf="@id/recommend_price"
            android:text="9999"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recommend_single_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单买价￥188"/>

        <TextView
            android:id="@+id/recommend_salesout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有888人参与"
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>